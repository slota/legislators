<!DOCTYPE html>
<html>
<head>
  <title>Legislators</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
</head>
<!-- <div class="background-banner">
</div>
<h4 class="test">test</h4> -->

<nav class="navbar navbar-inverse">
  <% if session[:user_id] %>
  <div class="container-fluid">
    <ul class="navbar-header navbar-text">
      <p> Welcome <%= current_user.name%>, check your reps!</p>
    </ul>
    <ul class="nav navbar-nav navbar-right navbar-text">
      <p> <%= link_to "Signout", logout_path%></p>
    </ul>
  </div>
  <% else %>
  <div class="container-fluid">
    <ul class="navbar-header navbar-text">
      <p> Log in to see your reps</p>
    </ul>
    <%= link_to login_path, class: "nav navbar-nav navbar-right btn btn-block btn-social btn-facebook" do %>
       <span class="fa fa-facebook"></span> Sign in with Facebook
    <% end %> 
  </div>
  <% end %>
</nav>
<body class="background-image">
  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
